<!-- app/src/main/res/layout/activity_main.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Source Amount and Currency -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <EditText
            android:id="@+id/et_sourceAmount"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:hint="Enter Amount"
            android:gravity="right|center_vertical"
            android:padding="10dp"
            android:layout_marginEnd="8dp"
            android:textSize="24sp"
            android:background="#E0F7FA"
            android:textColor="@color/black"/>

        <Spinner
            android:id="@+id/spn_sourceCurrency"
            android:layout_width="wrap_content"
            android:layout_height="70dp"/>
    </LinearLayout>

    <!-- Destination Amount and Currency -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <EditText
            android:id="@+id/et_destinationAmount"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:inputType="none"
            android:hint="Converted Amount"
            android:gravity="right|center_vertical"
            android:padding="10dp"
            android:layout_marginEnd="8dp"
            android:textSize="24sp"
            android:enabled="false"
            android:background="#E0F7FA"
            android:textColor="@color/black"/>

        <Spinner
            android:id="@+id/spn_destinationCurrency"
            android:layout_width="wrap_content"
            android:layout_height="71dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/text_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="40sp"
        android:textColor="#FF0000"
        android:layout_gravity="center"/>
    <!-- First row with CE, C, BS, / -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:orientation="vertical"
        android:background="#F1F8E9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <Button
                android:id="@+id/btnCE"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="CE"
                android:textSize="30sp"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="#424242"/>
            <Button
                android:id="@+id/btnC"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="C"
                android:textSize="30sp"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="#424242"/>
            <Button
                android:id="@+id/btnBS"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="BS"
                android:textSize="30sp"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="#424242"/>
            <Button
                android:id="@+id/btnDiv"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="/"
                android:textSize="30sp"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="#FF5722"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Second row with 7, 8, 9, x -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:orientation="vertical"
        android:background="#F1F8E9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <Button
                android:id="@+id/btn7"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="7"
                android:textSize="30sp"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="#424242"/>
            <Button
                android:id="@+id/btn8"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="8"
                android:textSize="30sp"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="#424242"/>
            <Button
                android:id="@+id/btn9"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="9"
                android:textSize="30sp"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="#424242"/>
            <Button
                android:id="@+id/btnMul"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="x"
                android:textSize="30sp"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="#FF5722"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Third row with 4, 5, 6, - -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:orientation="vertical"
        android:background="#F1F8E9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <Button
                android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="4"
                android:textSize="30sp"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="#424242"/>
            <Button
                android:id="@+id/btn5"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="5"
                android:textSize="30sp"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="#424242"/>
            <Button
                android:id="@+id/btn6"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="6"
                android:textSize="30sp"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="#424242"/>
            <Button
                android:id="@+id/btnSub"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="-"
                android:textSize="30sp"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="#FF5722"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Fourth row with 1, 2, 3, + -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:orientation="vertical"
        android:background="#F1F8E9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <Button
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="1"
                android:textSize="30sp"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="#424242"/>
            <Button
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="2"
                android:textSize="30sp"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="#424242"/>
            <Button
                android:id="@+id/btn3"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="3"
                android:textSize="30sp"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="#424242"/>
            <Button
                android:id="@+id/btnAdd"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="+"
                android:textSize="30sp"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="#FF5722"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Fifth row with +/-, 0, ., = -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:orientation="vertical"
        android:background="#F1F8E9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <Button
                android:id="@+id/btnPlusMinus"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="+/-"
                android:textSize="30sp"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="#424242"/>
            <Button
                android:id="@+id/btn0"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="0"
                android:textSize="30sp"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="#424242"/>
            <Button
                android:id="@+id/btnDot"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="."
                android:textSize="30sp"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="#424242"/>
            <Button
                android:id="@+id/btnEqual"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="="
                android:textSize="30sp"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="#FF5722"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>